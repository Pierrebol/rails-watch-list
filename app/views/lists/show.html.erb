<div class="banner show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1505775561242-727b7fba20f0?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fGZpbG18ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60);">
    <h1><%= @list.name %></h1>
  <div class="container my-3 links">
    <%= link_to "All your lists", lists_path, class:"button-back" %>
    <%= link_to "Delete #{@list.name}",
                list_path(@list),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class:"button-delete" %>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"button-add" %>
  </div>
</div>


<div class="cards container">
  <% @list.bookmarks.each do |bookmark| %>
      <div class="card-category-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= bookmark.movie.poster_url %> )">
        <div class="infos">
          <h2> <%= bookmark.movie.title %> </h2>
          <p> <%= bookmark.comment %> </p>
          <%= link_to ('<i class="far fa-trash-alt"></i>').html_safe, bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{@list.name} list"}, id:"delete-movie" %>
        </div>
      </div>
    <% end %>
</div>




