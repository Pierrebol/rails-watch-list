<h1> <%= @list.name %> </h1>


<div class="container">
  <div class="d-flex">
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.movie.title %> -
        <%= bookmark.comment %> -
        <%= link_to "Delete",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </li>
      <% end %>
    </ul>
  </div>
</div>


<%= link_to "Back to your lists", lists_path %>
<%= link_to "Delete #{@list.name}",
            list_path(@list),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>



